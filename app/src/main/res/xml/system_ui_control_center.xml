<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/system_ui_controlcenter_card_title">

        <SeekBarPreference
            android:key="prefs_key_system_control_center_qs_detail_bg"
            android:title="@string/system_control_center_qs_detail_bg"
            android:defaultValue="0"
            app:maxValue="255"
            app:format="%d"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

    <SwitchPreference
        android:key="prefs_key_hideMiPlayEntry"
        android:title="@string/hideMiPlayEntry"
        android:defaultValue="false"/>

    <SeekBarPreference
        android:title="@string/controlDetailBackgroundAlpha_summary"
        android:key="controlDetailBackgroundAlpha"
        android:defaultValue="120"
        app:minValue="120"
        app:maxValue="255"
        app:format="%s"
        app:showSeekBarValue="true" />

    <SwitchPreference
        android:key="prefs_key_n_enable"
        android:title="@string/NotificationBlurModel"
        android:defaultValue="false"/>

    <SeekBarPreference
        android:title="@string/blurRadius_summary"
        android:key="blurRadius"
        android:defaultValue="60"
        app:minValue="20"
        app:maxValue="99"
        app:format="%s"
        app:showSeekBarValue="true"
        android:dependency="prefs_key_n_enable"/>

    <SeekBarPreference
        android:title="@string/cornerRadius_summary"
        android:key="cornerRadius"
        android:defaultValue="48"
        app:minValue="0"
        app:maxValue="100"
        app:format="%s"
        app:showSeekBarValue="true"
        android:dependency="prefs_key_n_enable"/>

    <SeekBarPreference
        android:title="@string/blurBackgroundAlpha_summary"
        android:key="blurBackgroundAlpha"
        android:defaultValue="170"
        app:minValue="100"
        app:maxValue="240"
        app:format="%s"
        app:showSeekBarValue="true"
        android:dependency="prefs_key_n_enable"/>

    <SeekBarPreference
        android:title="@string/defaultBackgroundAlpha_summary"
        android:key="defaultBackgroundAlpha"
        android:defaultValue="200"
        app:minValue="120"
        app:maxValue="250"
        app:format="%s"
        app:showSeekBarValue="true"
        android:dependency="prefs_key_n_enable"/>

    <PreferenceCategory android:title="@string/system_ui_controlcenter_magnet_title">

        <SwitchPreference
            android:title="@string/system_control_center_5g_tile"
            android:key="prefs_key_system_control_center_5g_tile"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/system_control_center_qs_tile_label"
            android:key="prefs_key_system_control_center_qs_tile_label"
            android:defaultValue="false" />

        <SeekBarPreference
            android:key="prefs_key_system_control_center_qs_rows"
            android:title="@string/system_control_center_qs_rows"
            android:defaultValue="0"
            app:minValue="4"
            app:maxValue="6"
            app:format="@string/system_control_center_qs_rows_format"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:key="prefs_key_system_control_center_qs_columns"
            android:title="@string/system_control_center_qs_columns"
            android:defaultValue="0"
            app:minValue="4"
            app:maxValue="6"
            app:format="@string/system_control_center_qs_columns_format"
            app:showSeekBarValue="true"
            />

    </PreferenceCategory>
</PreferenceScreen>